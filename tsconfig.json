{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2017",
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
